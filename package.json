{
	"name": "summer",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "bun run server.js",
		"prepare": "svelte-kit sync && husky || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --experimental-cli --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "TZ=UTC bun test src",
		"test": "bun test:unit -- --run && bun test:e2e",
		"test:e2e": "TZ=UTC playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@iconify/json": "^2.2.404",
		"@playwright/test": "^1.56.1",
		"@prettier/plugin-oxc": "^0.0.4",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"@types/bun": "^1.3.1",
		"@types/express": "^5.0.6",
		"@types/luxon": "^3.7.1",
		"@types/pdfjs-dist": "2.7.5",
		"@types/ws": "^8.18.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^15.2.11",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.43.4",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"unplugin-icons": "^22.5.0",
		"vite": "^7.2.2"
	},
	"dependencies": {
		"@badrap/result": "^0.2.13",
		"express": "^5.2.1",
		"luxon": "^3.7.2",
		"pdfjs-dist": "2.3.200",
		"pdfkit": "^0.16.0",
		"surrealdb": "^1.3.2",
		"svelte-eslint-parser": "^1.4.0",
		"virtua": "^0.40.4",
		"ws": "^8.19.0",
		"zod": "^3.25.76"
	},
	"lint-staged": {
		"*": "bun prettier --experimental-cli --write --ignore-unknown"
	}
}
